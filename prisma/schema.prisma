generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  fname     String
  lname     String?
  username  String     @unique
  phone     String
  password  String
  docType   String?
  front     String?
  back      String?
  verified  Boolean    @default(false)
  createdAt DateTime   @default(now())
  funds     Funds[]
  Portfolio Portfolio?
}

model Funds {
  user          User     @relation(fields: [username], references: [username])
  id            Int      @id @default(autoincrement())
  username      String
  amount        Int
  status        String   @default("Processing")
  walletAddress String?
  transactionId String
  description   String?
  currencytype  String
  fundType      String
  createdAt     DateTime @default(now())
}

model Portfolio {
  user       User   @relation(fields: [username], references: [username])
  id         Int    @id @default(autoincrement())
  username   String @unique
  total      Int    @default(0)
  investment Int    @default(0)
  change     Int    @default(0)
  allocation Int    @default(0)
}

model Contact {
  id        Int      @id @default(autoincrement())
  email     String
  name      String
  phone     String
  message   String
  createdAt DateTime @default(now())
}
